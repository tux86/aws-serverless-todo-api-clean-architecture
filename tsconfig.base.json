{
  "compilerOptions": {
    "module": "CommonJS",
    "lib": [
      "ESNext"
    ],
    "types": [
      "node"
    ],
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "ES2020",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    // "skipLibCheck" :  see bug https://github.com/serverless/typescript/issues/27,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules/**/*",
    ".serverless/**/*",
    ".webpack/**/*",
    "_warmup/**/*",
    ".vscode/**/*",
    ".esbuild/**/*",
    ".dist/**/*"
  ],
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  }
}
