{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "outDir": ".dist",
    "baseUrl": "./",
    "paths": {
      "@/api/*": [
        "src/*"
      ],
      "@/common/*": [
        "../common/src/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "../common/src/**/*.ts"
  ],
  "exclude": [
    "iac/serverless/**",
    "node_modules/**/*",
    ".serverless/**/*",
    ".webpack/**/*",
    "_warmup/**/*",
    ".vscode/**/*",
    ".esbuild/**/*",
    ".dist/**/*"
  ]
}
